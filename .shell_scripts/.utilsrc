#!/bin/bash

# USE: desktop
#      desktop subfolder
desktop () {
  cd /Users/$USER/Desktop/$@
}
# A function to easily grep for a matching process
# USE: psg postgres
psg () {
  FIRST=`echo $1 | sed -e 's/^\(.\).*/\1/'`
  REST=`echo $1 | sed -e 's/^.\(.*\)/\1/'`
  ps aux | grep "[$FIRST]$REST"
}
# A function to extract correctly any archive based on extension
# USE: extract imazip.zip
#      extract imatar.tar
extract () {
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)  tar xjf $1      ;;
      *.tar.gz)   tar xzf $1      ;;
      *.bz2)      bunzip2 $1      ;;
      *.rar)      rar x $1        ;;
      *.gz)       gunzip $1       ;;
      *.tar)      tar xf $1       ;;
      *.tbz2)     tar xjf $1      ;;
      *.tgz)      tar xzf $1      ;;
      *.zip)      unzip $1        ;;
      *.Z)        uncompress $1   ;;
      *)          echo "'$1' cannot be extracted via extract()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}
exists () {
  [[ -f $1 ]]
}
editbash () {
  code ~/.bash_profile;
}
rebash () {
  source ~/.bash_profile;
}
path () {
  echo $PATH;
}
mov-to-gif () {
  ffmpeg -i $1 -vf "scale=1024:-1:flags=lanczos" -pix_fmt rgb24 -r 10 -f gif - | gifsicle --optimize=3 --delay=3 > $2
}

flushdns () {
  sudo dscacheutil -flushcache;sudo killall -HUP mDNSResponder
}

# takes function as $1 and list of args as $2
select-arg () {
  local CYAN=$'\e[1;36m'
  local RESET_COLOR=$'\e[m'
  
  # Set args
  args=( $2 exit )
  
  # Set select prompt PS3
  PS3="Select the arg to use with $CYAN$1$RESET_COLOR: "
  
  select arg in "${args[@]}"; do
    echo "You have chosen $arg"
    
    [[ $arg == exit ]] && break
    
    eval $1 "$arg"
    
    break
  done
}

